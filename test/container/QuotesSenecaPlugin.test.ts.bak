let _ = require('lodash');
let assert = require('chai').assert;

let pluginOptions = {
    'pip-services-quotes': {
        logs: {
            level: 'debug'
        },
        persistence: {
            type: 'memory'
        },
        services: {
            connection: {
                type: 'none'
            }
        }
    }
};

suite('QuotesSenecaPlugin', ()=> {
    let seneca;

    suiteSetup((done) => {
        seneca = require('seneca')();

        // Load Seneca plugin
        let plugin = require('../../src/container/QuotesSenecaPlugin');
        seneca.use(plugin);

        seneca.ready(done);
    });

    suiteTeardown((done) => {
        seneca.close(done);
    });

    test.skip('Ping', (done) => {
        seneca.act(
            {
                role: 'quotes',
                cmd: 'get_quotes' 
            },
            (err, page) => {
                assert.isNull(err);
                assert.isObject(page);
                done();
            }
        );
    });
});